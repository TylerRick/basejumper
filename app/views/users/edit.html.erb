<%= page_title 'Edit My Account' %>

<% semantic_form_for @user, :url => account_path do |f| %>
  <% f.fieldset do %>
    <%= f.error_messages %>
    
    <%= render :partial => "form", :object => f %>

    <dd class='buttons'>
      <%= pretty_positive_button 'Update' %>
      <%= pretty_negative_button_link 'Cancel', account_path %>
    </dd>
    
  <% end %>
<% end %>