!!!
%html{ :lang => "en" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
      = html_title configatron.site_name

      = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
      = stylesheet_link_tag 'compiled/print.css', :media => 'print'
      /[if IE]
        = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
      = stylesheet_link_tag 'compiled/application.css'
      = javascript_include_tag :defaults

      = active_scaffold_includes

      = stylesheet_link_tag 'compiled/active_scaffold_overrides.css'
  %body{ :class => params[:action], :id => params[:controller] }
    = render :partial => 'layouts/account_bar'
    = render :partial => 'layouts/header'
    #content.clearfix
      #admin_nav
        = render :partial => 'admin/navigation'
      = yield
    = render :partial => 'layouts/footer'
