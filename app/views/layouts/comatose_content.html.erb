<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
  <head>
  	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <%= html_title "#{@page.title} : #{configatron.site_name}" %>
  
    <%= stylesheet_link_tag 'blueprint/screen.css', :media => 'screen, projection' %> 
    <%= stylesheet_link_tag 'blueprint/print.css', :media => 'print' %>
    <!--[if IE]><%= stylesheet_link_tag 'blueprint/ie.css', :media => "screen, projection" %><![endif]-->

    <%= stylesheet_link_tag 'blueprint/plugins/buttons/screen.css' %> 
    <%= stylesheet_link_tag 'jquery-ui/ui.all.css' %> 
    <%= stylesheet_link_tag 'application.css', :media => 'screen, projection' %> 

    <%= javascript_include_tag 'jquery-1.3.1.js' %>
    <%= javascript_include_tag 'jquery.ui.all.js' %>
  
    <%= yield :html_head %>
  </head>

  <body id="<%= params[:controller] %>" class="<%= params[:action] %>">
    <%= render :partial => 'layouts/account_bar' %>
    <%= render :partial => 'layouts/header' %>
    <div id='content' class='clearfix'>
      <div id='main'>
    	  <%= display_flash %>

    	  <%= page_title @page.title %>
    	          
    	  <%= yield %>
      </div>
      <%= render :partial => 'layouts/sidebar' %>
    </div>
    <%= render :partial => 'layouts/footer' %>
  </body>
</html>