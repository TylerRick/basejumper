!!!
%html{ :lang => "en" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
      = html_title configatron.site_name
      = stylesheet_link_tag 'blueprint/screen.css', :media => 'screen, projection'
      = stylesheet_link_tag 'blueprint/print.css', :media => 'print'
      /[if IE]
        = stylesheet_link_tag 'blueprint/ie.css', :media => 'screen, projection'
      = stylesheet_link_tag 'blueprint/plugins/buttons/screen.css'
      = stylesheet_link_tag 'jquery-ui/ui.all.css'
      = stylesheet_link_tag 'application.css', :media => 'screen, projection'
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.1/jquery-ui.min.js'
      = yield :html_head
  %body{ :class => params[:action], :id => params[:controller] }
    = render :partial => 'layouts/account_bar'
    = render :partial => 'layouts/header'
    #content.clearfix
      #main
        = display_flash
        = yield
      = render :partial => 'layouts/sidebar'
    = render :partial => 'layouts/footer'
