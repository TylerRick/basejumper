<%= page_title 'Change My Password' %>

<% semantic_form_for @user, :url => password_reset_path(:id => params[:id]) do |f| %>
  <% f.fieldset do %>
    <%= f.error_messages %>

    <%= f.password_field :password %>

    <%= f.password_field :password_confirmation %>

    <dd class='buttons'>
      <%= pretty_positive_button 'Update my password and log me in' %>
    </dd>
  <% end %>
<% end %>