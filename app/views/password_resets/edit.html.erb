<%= page_title 'Change My Password' %>

<% form_for @user, :url => password_reset_path(:id => params[:id]) do |f| %>
  <%= f.error_messages %>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class='buttons'>
    <%= pretty_positive_button 'Update my password and log me in' %>
  </div>
<% end %>